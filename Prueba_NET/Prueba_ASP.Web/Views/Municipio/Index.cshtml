
@{
    ViewBag.Title = "Index";
}

<div class="page-header text-center">
    <h3 class="text-center">Municipio</h3>
</div>
<div class="row">
    <div class="col-md-3 col-sm-2">
        <div class="form-group">
            <label for="txtCodigo">Codigo</label>
            <input type="text" id="codigo" name="txtCodigo" value="" class="form-control" />
        </div>
    </div>
    <div class="col-md-3 col-sm-2">
        <div class="form-group">
            <label for="txtMunicipio">Nombre</label>
            <input type="text" id="municipio" name="txtMunicipio" value="" class="form-control" />
        </div>
    </div>
    <div class="col-md-3 col-sm-2">
        <div class="form-group">
            <label for="cbxRegion">Region</label>
            <select id="cbxRegion" name="cbxRegion" class="form-control">
                <option value="">--Seleccione una Region--</option>
             </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3 col-sm-2">
        <div class="form-group">
            <label for="estado">Estado</label>
            <input type="radio" id="estado" name="estado" value="">
        </div>
    </div>
</div>
<div class="row">
    <input type="submit" class="btn btn-primary btn-block" id="btnGuardar" name="guardar_municipios" value="Guardar" />
 </div>
<div class="row">
    <table id="datatable" class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>  Codigo </th>
                <th>  Municipio </th>
                <th>  Estado </th>
                <th>  Codigo_region </th>
                <th>  Region </th>
                <th>  Accion </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<script src="~/Scripts/Views/Municipio.js"></script>
