
@{
    ViewBag.Title = "Index";
}
@*Vista de la region*@
<div class="page-header text-center">
    <h3 class="text-center">Region</h3>
</div>

<div id="divmensaje" class="text-center" hidden>
    <label id="lblmensaje"> </label>
    <div class="text-center">
        <button type="button" id="btnNotificacion">Aceptar</button>
    </div>
</div>
<div class="container  p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="">
                <div class="form-group">
                    <input type="text" id="codigo" class="form-control" value="" placeholder="Codigo" autofocus required />
                </div>
                <div class="form-group">
                    <input type="text" id="region" class="form-control" value="" placeholder="Ingrese Region" required />
                </div>
                <div class="form-group">
                    <select id="cbxMunicipio" class="form-control" required>
                    </select>
                </div>
                <input type="submit" class="btn btn-primary btn-block" id="btnGuardar" name="guardar_region" value="Guardar" />
                <input type="submit" class="btn btn-success btn-block" id="btnActualizar" name="actualizar_region" value="Actualizar" />
            </div>
        </div>
        <div class="col-md-8">
            <table id="datatable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>  Codigo </th>
                        <th>  Region </th>
                        <th>  Codigo_municipio </th>
                        <th>  Municipio </th>
                        <th>  Accion </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/Views/Region.js"></script>
